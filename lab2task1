#include <iostream>
void merge(int arr[],int mid,int first,int last) {
	int n = last - first + 1;
	int temp[100];
	int i = first;
	int j = mid + 1;
	int k = 0;

	while (i <= mid && j<=last) {
		if (arr[i] <= arr[j]) {
			temp[k] = arr[i];
			i++;
		}
		else {
			temp[k] = arr[j];
			j++;
		}
		k++;
	}
	while (i <= mid) {
		temp[k] = arr[i];
		i++;
		k++;
	}
	while (j <= last) {
		temp[k] = arr[j];
		j++;
		k++;
	}
	for (int t = 0; t < n; t++) {
		arr[first + t] = temp[t];
	}
}
void mergeSort(int arr[], int first, int last) {
	if (first >= last)
		return;
	int mid = (first + last) / 2;
	mergeSort(arr, first, mid);
	mergeSort(arr, mid + 1, last);
	merge(arr,mid,first,last);
}
int main() {
	int numbers[] = { 10, 90, 95, 30, 45, 60, 57, 28, 5 };
	int SIZE = std::size(numbers);
	mergeSort(numbers, 0, SIZE - 1);
	for (int n = 0; n < SIZE; n++) {
		std::cout << numbers[n] << ' ';
	}
}
